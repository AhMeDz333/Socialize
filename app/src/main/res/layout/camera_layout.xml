<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/camera_card_height"
    app:cardElevation="@dimen/default_elevation"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/uploaded_imageView"
        android:contentDescription="@string/uploaded_image"
        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_photo"
        android:layout_gravity="center"
        android:background="@drawable/circular_image"
        >
        <ImageView
            android:layout_width="@dimen/icon_medium_size"
            android:layout_height="@dimen/icon_medium_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_camera"
            android:contentDescription="@string/uploaded_image"
            />
    </FrameLayout>
</android.support.v7.widget.CardView>